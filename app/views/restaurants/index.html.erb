<h2>All Restaurants</h2>

<p><%= link_to 'Add Restaurant', new_restaurant_path %></p>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li><h3><%= link_to restaurant.name, restaurant_path(restaurant) %> <%= '⭐️'*restaurant.rating %><h3></li>
    <p><%= restaurant.address %></p>
    <p>
      <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
      <%= link_to 'Delete', restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?" } %>
    </p>
    <hr/>
  <% end %>
</ul>
